<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uni.tighearnan.routepicker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/activity_sign_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".JourneyPlannerActivity"
            android:label="@string/activity_title_journey_planner"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".JourneyDetailsActivity"
            android:label="@string/activity_title_journey_details"
            android:launchMode="singleTask"
            android:parentActivityName=".JourneyPlannerActivity">
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:label="@string/activity_title_confirm_and_pay"
            android:launchMode="singleTask"
            android:parentActivityName=".JourneyDetailsActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAZm6iFDhF3zM0wbimYqTkBnUK4d8CO9Lk"/>

        <activity android:name=".TicketActivity">
        </activity>
    </application>

</manifest>